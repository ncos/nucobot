<?xml version="1.0"?>
<robot name="pikea" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find nucobot_description)/urdf/materials.xacro" />
  <property name="M_PI" value="3.1415926535897931" />  
  <property name="WHEEL_SEP" value="0.15" />  
  <property name="WHEEL_DIA" value="0.07" />  
  <property name="WHEEL_HGT" value="-0.08" />  
  <property name="WHEEL_SHIFT" value="-0.02" />  
  
  
  
  <link name="base_footprint"/>
  <joint name="base_joint" type="fixed">
    <origin xyz="0 0 0.0102" rpy="0 0 0" />
    <parent link="base_footprint"/>
    <child link="base_link" />
  </joint>

  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://nucobot_description/meshes/pikea/body.dae"/>
      </geometry>
      <origin xyz="0.001 0 0.0" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://nucobot_description/meshes/pikea/body.dae"/>
      </geometry>
      <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <origin xyz="0 0 ${WHEEL_HGT}"/>
      <mass value="2.4"/>
      <inertia ixx="0.019995" ixy="0.0" ixz="0.0"
               iyy="0.019995" iyz="0.0" 
               izz="0.03675" />
    </inertial>
  </link>

  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <origin xyz="${WHEEL_SEP/2} ${WHEEL_SHIFT} ${WHEEL_HGT}" rpy="${M_PI/2} 0 0"/>
    <axis xyz="1 0 0"/>
  </joint>
  <link name="wheel_left_link">
    <visual>
      <geometry>
        <mesh filename="package://nucobot_description/meshes/pikea/wheel.dae"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://nucobot_description/meshes/pikea/wheel.dae"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.01" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0" 
               izz="0.001" />
    </inertial>
  </link>
    
  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="-${WHEEL_SEP/2} ${WHEEL_SHIFT} ${WHEEL_HGT}" rpy="${-M_PI/2} 0 0"/>
    <axis xyz="1 0 0"/>
  </joint>
  <link name="wheel_right_link">
    <visual>
      <geometry>
        <mesh filename="package://nucobot_description/meshes/pikea/wheel.dae"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://nucobot_description/meshes/pikea/wheel.dae"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.01" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0" 
               izz="0.001" />
    </inertial>
  </link>
  
  <joint name="wheel_front_joint" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_front_link"/>
    <origin xyz="0 ${-WHEEL_SHIFT} ${WHEEL_HGT}" rpy="${M_PI/2} 0 0"/>
  </joint>
  <link name="wheel_front_link">
    <visual>
      <geometry>
        <mesh filename="package://nucobot_description/meshes/pikea/wheel.dae"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://nucobot_description/meshes/pikea/wheel.dae"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.01" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0" 
               izz="0.001" />
    </inertial>
  </link>

  <gazebo reference="wheel_left_link">
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
  </gazebo>

  <gazebo reference="wheel_right_link">
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
  </gazebo>
  
  <gazebo reference="wheel_front_link">
    <mu1>0.0</mu1>
    <mu2>0.0</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
  </gazebo>

  <gazebo>
    <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <alwaysOn>true</alwaysOn>
      <updateRate>100</updateRate>
      <leftJoint>wheel_right_joint</leftJoint>
      <rightJoint>wheel_left_joint</rightJoint>
      <wheelSeparation>${WHEEL_SEP}</wheelSeparation>
      <wheelDiameter>${WHEEL_DIA}</wheelDiameter>
      <torque>20</torque>
      <wheelTorque>20</wheelTorque>
      <wheelAcceleration>0</wheelAcceleration>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <publishWheelTF>false</publishWheelTF>
      <publishWheelJointState>false</publishWheelJointState>
      <robotBaseFrame>base_footprint</robotBaseFrame>
      <rosDebugLevel>na</rosDebugLevel>
    </plugin>
  </gazebo>  
</robot>
