<launch>
  <arg name="base"       default="$(optenv NUCOBOT_BASE lisa)"/>
  <arg name="3d_sensor"  default="$(optenv NUCOBOT_3D_SENSOR kinect)"/>
  <arg name="simulation" default="$(optenv NUCOBOT_SIMULATION false)"/>

  <include file="$(find nucobot_bringup)/launch/minimal.launch">
    <arg name="base" value="$(arg base)" />
    <arg name="3d_sensor" value="$(arg 3d_sensor)" />
    <arg name="simulation" value="$(arg simulation)" />
  </include>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find odometry_driver_wheel)/launch/wheel_odometry_test.rviz"/>

  <!--node name="keyboard_control" pkg="nucobot_control" type="key_teleop.py" output="screen" /-->
</launch>
